.input-n-button {
    position: relative;
    display: flex;
    width: max-content;

    input {
        padding-right: 25px;
    }

    button {
        padding-right: 20px;
        transform: translateX(-20px);
        border-radius: 10px;

        .svg-wrap {
            margin-right: 12px;
            transform: translateY(-1px);
        }
    }
}